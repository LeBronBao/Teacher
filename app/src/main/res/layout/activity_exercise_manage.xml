<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_my_class"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_high_red">

            <Button
                android:id="@+id/bt_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rc_back_icon"/>

            <TextView
                android:id="@+id/tv_label"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="130dp"
                android:layout_marginStart="130dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="题目汇总"
                android:textSize="25sp"
                android:textColor="@color/white"
                />

        </FrameLayout>

        <TextView
            style="@style/class_title_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="已上传的题目"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="年级"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/sp_grade"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:entries="@array/grade" />

            <Button
                android:id="@+id/bt_show_all_exercises"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="查看所有题目"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@color/color_high_red" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="科目"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:textColor="@android:color/black"/>

            <Spinner
                android:id="@+id/sp_subject"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:entries="@array/subject" />

            <Button
                android:id="@+id/bt_reload_exercises"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="重新加载题目"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@color/color_high_red" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="题目类型"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:textColor="@android:color/black"/>

            <Spinner
                android:id="@+id/sp_exercise_type"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:entries="@array/exercise_type" />

            <Button
                android:id="@+id/bt_search_exercises"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="搜索题目"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@color/color_high_red" />


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="5dp"
            android:id="@+id/recycler_fill_in_blank_exercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:overScrollMode="never"
            android:padding="5dp"/>

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="5dp"
            android:id="@+id/recycler_multiple_choices_exercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:overScrollMode="never"
            android:padding="5dp"/>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layout_no_exercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@drawable/ic_announcement_grey_500_48dp"
                android:contentDescription="无知识标签显示"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="该科目年级下无题目，请上传~"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
