<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/grade_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center" >


        <Spinner
            android:id="@+id/grade"
            android:layout_width="152dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:entries="@array/grade"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/grade_title"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:text="年  级"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/classnumber_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/class_number_title"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:text="班  号"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/class_number"
            android:layout_width="150dp"
            android:layout_marginLeft="10dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="2">
        </EditText>

        <Button
            android:id="@+id/class_number_clear"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:visibility="visible"
            android:background="@drawable/ic_remove_blue_grey_300_18dp"
            android:layout_gravity="right"
            android:layout_marginRight="70dp"
            android:layout_marginTop="10dp"
            />
    </FrameLayout>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/bt_create_class"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/color_red_main"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="创 建 班 级"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</LinearLayout>