<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/upload_multiple_choices_exercise_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:id="@+id/upload_knowledge_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_high_red">

            <Button
                android:id="@+id/bt_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rc_back_icon"/>

            <TextView
                android:id="@+id/tv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="5dp"
                android:text="知识点上传"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/subject_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_choose_subject"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:gravity="center"
                android:text="选择科目"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner_subject"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginLeft="180dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="4dp"
                android:entries="@array/subject">

            </Spinner>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/grade_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_choose_grade"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:gravity="center"
                android:text="选择年级"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner_grade"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginLeft="180dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="4dp"
                android:entries="@array/grade">

            </Spinner>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/knowledge_label_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_add_knowledge"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:gravity="center"
                android:text="知识标签"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_knowledge"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="140dp"
                android:layout_marginStart="140dp"
                android:hint="请使用简短词语描述知识点"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/knowledge_description_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_add_knowledge_description"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:gravity="center"
                android:text="知识描述"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_knowledge_description"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="140dp"
                android:layout_marginStart="140dp"
                android:hint="请详细描述该知识点（可选）"/>



        </FrameLayout>

        <FrameLayout
            android:id="@+id/related_knowledge_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_add_related_knowledge"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:gravity="center"
                android:text="选择关联知识"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/sp_related_knowledge"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginLeft="180dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="4dp"
                />



        </FrameLayout>

        <FrameLayout
            android:id="@+id/knowledge_relation_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_add_knowledge_relation"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:gravity="center"
                android:text="选择关联关系"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/sp_knowledge_relation"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginLeft="180dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="4dp"
                />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/knowledge_relation_example_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_knowledge_relation_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="57dp"
                android:layout_marginStart="57dp"
                android:gravity="center"
                android:text="示例："
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_knowledge_to_be_uploaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100以内的减法"/>

            <TextView
                android:id="@+id/tv_knowledge_relation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:text="包含于"
                android:textColor="@color/color_low_red"/>

            <TextView
                android:id="@+id/tv_knowledge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:text="减法" />


        </LinearLayout>

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/bt_upload_knowledge"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/color_red_main"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="上传"
            android:textSize="18sp"
            />

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>