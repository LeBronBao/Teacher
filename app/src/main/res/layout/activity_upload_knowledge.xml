<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_high_red">

        <Button
            android:id="@+id/bt_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/rc_back_icon"/>

        <TextView
            android:id="@+id/tv_label"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="120dp"
            android:layout_marginStart="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="知识上传"
            android:textSize="25sp"
            android:textColor="@color/white"
            />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/upload_knowledge_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <FrameLayout
            android:id="@+id/subject_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_choose_subject"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:gravity="center"
                android:text="选择科目"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner_subject"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginLeft="180dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="4dp"
                android:entries="@array/subject">

            </Spinner>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/grade_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_choose_grade"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:gravity="center"
                android:text="选择年级"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner_grade"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginLeft="180dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="4dp"
                android:entries="@array/grade">

            </Spinner>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/knowledge_label_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_add_knowledge"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:gravity="center"
                android:text="知识标签"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_knowledge"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="140dp"
                android:layout_marginStart="140dp"
                android:hint="请使用简短词语描述知识点"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/knowledge_description_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_add_knowledge_description"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:gravity="center"
                android:text="知识描述"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_knowledge_description"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="140dp"
                android:layout_marginStart="140dp"
                android:hint="请详细描述该知识点（可选）"/>



        </FrameLayout>

    </LinearLayout>

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/bt_upload_knowledge"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/color_red_main"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="上传"
        android:textSize="18sp"
        />
</LinearLayout>