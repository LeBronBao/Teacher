<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/upload_multiple_choices_exercise_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_high_red">

            <Button
                android:id="@+id/bt_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rc_back_icon" />

            <TextView
                android:id="@+id/tv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="5dp"
                android:text="填空题上传"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/subject_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_choose_subject"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="选择科目"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/sp_subject"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginLeft="180dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="4dp"
                android:entries="@array/subject">

            </Spinner>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/grade_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_choose_grade"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="选择年级"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/sp_grade"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginLeft="180dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="4dp"
                android:entries="@array/grade">

            </Spinner>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/knowledge_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_choose_knowledge"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="选择知识点"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/sp_knowledge"
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:layout_marginLeft="180dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="4dp">

            </Spinner>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/question_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="题干"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_question"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginStart="110dp"
                android:layout_marginTop="20dp"
                android:hint="（必填）" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/answer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_answer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:gravity="center"
                android:text="答案"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_answer"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginStart="110dp"
                android:hint="（必填）" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/analysis_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_analysis"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:gravity="center"
                android:text="分析"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_analysis"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginStart="110dp"
                android:hint="（可选）" />


        </FrameLayout>

        <FrameLayout
            android:id="@+id/image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:gravity="center"
                android:text="图片"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_question_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="110dp"
                android:layout_marginStart="110dp"
                android:layout_marginTop="5dp"
                android:contentDescription="题干图片"
                android:src="@drawable/ic_upload_picture" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginLeft="150dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="15dp"
                android:text="（点击上传题干图片，可选）"
                android:textSize="15sp" />

        </FrameLayout>

        <Button
            android:id="@+id/bt_upload_fill_in_blank_exercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_low_red"
            android:gravity="center"
            android:text="上传题目"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
