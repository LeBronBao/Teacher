<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/upload_multiple_choices_exercise_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:id="@+id/relate_knowledge_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_high_red">

            <Button
                android:id="@+id/bt_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rc_back_icon"/>

            <TextView
                android:id="@+id/tv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="5dp"
                android:text="知识点关联"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/knowledge1_subject_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_choose_subject1"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:gravity="center"
                android:text="选择科目"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/sp_subject1"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginLeft="180dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="4dp"
                android:entries="@array/subject">

            </Spinner>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/knowledge1_grade_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Spinner
                android:id="@+id/sp_grade1"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginLeft="180dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="4dp"
                android:entries="@array/grade">

            </Spinner>

            <TextView
                android:id="@+id/tv_choose_grade1"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="选择年级"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/knowledge1_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Spinner
                android:id="@+id/sp_knowledge1"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginLeft="180dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="4dp">

            </Spinner>

            <TextView
                android:id="@+id/tv_choose_knowledge1"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="知识点一"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/divider_line"/>

        <FrameLayout
            android:id="@+id/knowledge_relation_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Spinner
                android:id="@+id/sp_knowledge_relation"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginLeft="180dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="4dp"
                android:entries="@array/knowledge_relations2">

            </Spinner>

            <TextView
                android:id="@+id/tv_choose_knowledge_relation"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="关联关系"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/divider_line"/>

        <FrameLayout
            android:id="@+id/knowledge2_subject_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_choose_subject2"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:gravity="center"
                android:text="选择科目"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/sp_subject2"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginLeft="180dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="4dp"
                android:entries="@array/subject">

            </Spinner>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/knowledge2_grade_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Spinner
                android:id="@+id/sp_grade2"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginLeft="180dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="4dp"
                android:entries="@array/grade">

            </Spinner>

            <TextView
                android:id="@+id/tv_choose_grade2"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="选择年级"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/knowledge2_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Spinner
                android:id="@+id/sp_knowledge2"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginLeft="180dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="4dp"
                android:entries="@array/grade">

            </Spinner>

            <TextView
                android:id="@+id/tv_choose_knowledge2"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="知识点二"
                android:textColor="@android:color/black"
                android:textSize="18sp" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/knowledge_relation_example_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_knowledge_relation_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="57dp"
                android:layout_marginStart="57dp"
                android:gravity="center"
                android:text="关系示例："
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_knowledge1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>

            <TextView
                android:id="@+id/tv_knowledge_relation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:text=""
                android:textColor="@color/color_low_red"/>

            <TextView
                android:id="@+id/tv_knowledge2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:text="" />


        </LinearLayout>

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/bt_upload_knowledge_relation"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/color_red_main"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="上传关联"
            android:textSize="18sp"
            />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
